{% extends 'layout.njk' %}
{% block headstyle %}{% endblock %}
{% block content %}
  <main>
    <div class="container">
      <h2 class="title">Mais acessadas</h2>
      <div class="cards">
        {% for item in items %}
          <div class="card">
            <img src="{{ item.image }}" alt="Imagem de {{ item.title }}">
              <h4 class="title">{{ item.title }}</h4>
              <span class="subtitle">{{ item.author }}</span>
            </div>
          {% endfor %}
        </div>
      </div>
    </main>
  {% endblock %}
{% extends './layout.njk' %}
{% block headstyle %}
    <link rel="stylesheet" href="/css/admin/index.css">
    {% endblock %}
    {% block content %}
        <section id="recipes-admin">
            <div class="container">
                <h2 class="title">Gerenciar receitas</h2>
                <div class="content-recipes">
                    {% for item in items %}
                        <div class="grids-admin">
                            <div>
                                <img src="{{ item.image }}" alt="Imagem de {{ item.title }}"></div>
                                <div>
                                    <h3>{{ item.title }}</h3>
                                    <p>{{ item.author }}</p>
                                    <a href="/admin/show/{{ item.id }}">Visualizar</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endblock %}